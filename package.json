{
  "name": "warmwinters.org",
  "private": true,
  "scripts": {
    "start": "run-p watch-hugo watch-js watch-sass",
    "watch-hugo": "hugo serve",
    "watch-js": "babel src/js/main.js --watch --out-file build/bundle.js",
    "watch-sass": "node-sass -w --output-style compressed --include-path src/scss src/scss/main.scss build/bundle.css"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1"
  }
}
